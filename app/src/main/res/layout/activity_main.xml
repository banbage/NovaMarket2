<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <TextView
        android:id="@+id/main_login_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:background="@drawable/category_check_end"
        android:text="로그인"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_password" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="205dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/sparkler"
        app:layout_constraintBottom_toBottomOf="@+id/main_title"
        app:layout_constraintEnd_toEndOf="@+id/main_title" />

    <TextView
        android:id="@+id/main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="NovaMarket"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/main_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/borderline"
        android:hint="전화번호 또는 이메일"
        android:inputType="text"
        android:maxLength="25"
        android:maxLines="1"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_title" />

    <EditText
        android:id="@+id/main_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/borderline"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:maxLength="15"
        android:maxLines="1"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_id" />

    <CheckBox
        android:id="@+id/main_auto_login"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:text="자동로그인"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/main_login_btn"
        app:layout_constraintTop_toBottomOf="@+id/main_login_btn" />

    <TextView
        android:id="@+id/main_join"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="회원가입"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/main_login_btn"
        app:layout_constraintTop_toBottomOf="@+id/main_login_btn" />


    <!--    <com.navercorp.nid.oauth.view.NidOAuthLoginButton-->
    <!--        android:id="@+id/main_naver"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="50dp"-->
    <!--        android:layout_marginBottom="192dp"-->

    <!--        android:text="네이버로 시작하기"-->
    <!--        android:textColor="@color/black"-->
    <!--        android:textSize="15sp"-->
    <!--        android:textStyle="bold"-->
    <!--        app:layout_constraintBottom_toBottomOf="parent"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintHorizontal_bias="1.0"-->
    <!--        app:layout_constraintStart_toStartOf="parent" />-->


    <TextView
        android:id="@+id/main_find_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:padding="10dp"
        android:text="비밀번호 찾기"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/main_kakao" />

    <TextView
        android:id="@+id/main_find_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:padding="10dp"
        android:text="아이디 찾기"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/main_kakao" />

    <com.nhn.android.naverlogin.ui.view.OAuthLoginButton
        android:id="@+id/main_naver"
        android:layout_width="235dp"
        android:layout_height="50dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.561"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_login_btn" />

    <TextView
        android:id="@+id/main_kakao"
        android:layout_width="235dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/kakao"
        app:layout_constraintEnd_toEndOf="@+id/main_naver"
        app:layout_constraintStart_toStartOf="@+id/main_naver"
        app:layout_constraintTop_toBottomOf="@+id/main_naver" />

    <com.kakao.usermgmt.LoginButton
        android:id="@+id/main_kakao_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/main_kakao"
        app:layout_constraintTop_toBottomOf="@+id/main_kakao" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/main_google"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/main_kakao"
        app:layout_constraintStart_toStartOf="@+id/main_kakao"
        app:layout_constraintTop_toBottomOf="@+id/main_kakao" />


</androidx.constraintlayout.widget.ConstraintLayout>